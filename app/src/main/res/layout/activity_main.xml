<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="yassyass.phsyic.MainActivity">

    <ImageButton
        android:id="@+id/Velocity"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        app:srcCompat="@drawable/vl"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/Accel"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        app:srcCompat="@drawable/accel"
        android:layout_below="@+id/Velocity"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/Momentum"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Accel"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/momentum" />

</RelativeLayout>
